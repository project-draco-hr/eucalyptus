{
  try {
    if ("vm".equals(uri.getScheme()) || NetworkUtil.testLocal(uri.getHost())) {
      return new LocalConfiguration(null,this.getComponent().getPeer(),uri);
    }
 else {
      return new RemoteConfiguration(null,this.getComponent().getPeer(),uri);
    }
  }
 catch (  Exception e) {
    return new LocalConfiguration(null,this.getComponent().getPeer(),uri);
  }
}
