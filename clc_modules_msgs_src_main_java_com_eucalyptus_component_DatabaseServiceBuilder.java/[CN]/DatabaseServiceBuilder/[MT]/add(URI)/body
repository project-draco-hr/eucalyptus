{
  try {
    if (NetworkUtil.testLocal(uri.getHost())) {
      return new LocalConfiguration(this.getComponent().getPeer(),uri);
    }
 else {
      return new RemoteConfiguration(this.getComponent().getPeer(),uri);
    }
  }
 catch (  Exception e) {
    return new LocalConfiguration(this.getComponent().getPeer(),uri);
  }
}
