{
  for (  final Map.Entry<String,Long> entry : NetworkInfoBroadcaster.activeBroadcastMap.entrySet()) {
    if (entry.getValue() + TimeUnit.MINUTES.toMillis(activeBroadcastTimeoutMins) < System.currentTimeMillis() && NetworkInfoBroadcaster.activeBroadcastMap.remove(entry.getKey(),entry.getValue())) {
      logger.warn("Timed out active network information broadcast for partition" + entry.getKey());
    }
  }
  if (counter++ % intervalTicks == 0 && Topology.isEnabledLocally(Eucalyptus.class) && Hosts.isCoordinator() && Bootstrap.isOperational() && !Databases.isVolatile()) {
    requestNetworkInfoBroadcast();
  }
}
