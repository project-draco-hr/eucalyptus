{
  try {
    final X509Certificate cert=PEMFiles.getCert(B64.standard.dec(certPem));
    final Date notBefore=cert.getNotBefore();
    final Date notAfter=cert.getNotAfter();
    final Date now=Calendar.getInstance().getTime();
    if (now.before(notBefore))     throw new Exception("Current date is before the certificate's valid period");
 else     if (now.after(notAfter))     throw new Exception("Current date is after the certificate's valid period");
    return true;
  }
 catch (  final Exception ex) {
    return false;
  }
}
