{
  try {
    final X509Certificate cert=PEMFiles.getCert(certBody.getBytes(Charsets.UTF_8));
    if (cert == null)     throw new EucalyptusCloudException("Malformed cert");
    final KeyPair kp=PEMFiles.getKeyPair(pk.getBytes(Charsets.UTF_8));
    if (kp == null)     throw new EucalyptusCloudException("Malformed pk");
  }
 catch (  final Exception ex) {
    return false;
  }
  return true;
}
