{
  checkLocalDisk();
  if (!isPrimary()) {
    if (isPeerPrimary()) {
      throw new EucalyptusCloudException("Peer is primary and I am supposed to be master! Unable to proceed!");
    }
    makePrimary();
  }
  if (!isConnected()) {
    try {
      connectResource();
    }
 catch (    Exception e) {
      LOG.error(e);
    }
  }
  if (!isMounted()) {
    try {
      mountPrimary();
    }
 catch (    Exception e) {
      LOG.error(e,e);
      if (isPrimary()) {
        makeSecondary();
      }
      throw new EucalyptusCloudException("Unable to mount primary: " + e);
    }
  }
  if (!isPrimary()) {
    throw new EucalyptusCloudException("Unable to make resource primary.");
  }
  LOG.debug("Enable complete...DRBD mounted");
}
