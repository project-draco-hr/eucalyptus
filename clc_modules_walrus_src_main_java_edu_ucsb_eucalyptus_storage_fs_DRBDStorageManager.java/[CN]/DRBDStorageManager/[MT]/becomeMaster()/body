{
  checkLocalDisk();
  if (!isPrimary()) {
    makePrimary();
  }
  if (!isConnected()) {
    throw new EucalyptusCloudException("Resource not connected to peer.");
  }
  if (!isMounted()) {
    mountPrimary();
  }
  if (!isPrimary()) {
    throw new EucalyptusCloudException("Unable to make resource primary.");
  }
}
