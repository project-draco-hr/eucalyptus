{
  checkLocalDisk();
  if (isMounted()) {
    unmountPrimary();
  }
  if (!isSecondary()) {
    makeSecondary();
  }
  if (!isConnected()) {
    connectResource();
    if (!isConnected()) {
      throw new EucalyptusCloudException("Resource not connected to peer.");
    }
  }
  if (!isSecondary()) {
    throw new EucalyptusCloudException("Unable to make resource secondary.");
  }
  if (!isPeerPrimary()) {
    LOG.warn("Warning! Peer is not primary. No usable component?");
  }
}
