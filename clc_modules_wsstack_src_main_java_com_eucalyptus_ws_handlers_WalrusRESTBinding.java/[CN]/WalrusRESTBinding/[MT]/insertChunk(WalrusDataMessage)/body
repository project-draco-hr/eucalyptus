{
  if (putQueue != null) {
    boolean success=false;
    int retry_count=0;
    do {
      success=putQueue.offer(message,500,TimeUnit.MILLISECONDS);
      if (++retry_count > PUT_RETRY_COUNT) {
        LOG.error("Tired of waiting for PUT. Giving up.");
        putQueue=null;
      }
    }
 while ((putQueue != null) && (!success));
  }
}
