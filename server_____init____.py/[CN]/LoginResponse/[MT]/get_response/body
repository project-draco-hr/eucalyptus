def get_response(self):
    context = ContextHelper(self.user)
    text_data = {}
    for (n, v) in data_helper.list_items('text'):
        text_data[n] = v
    img_data = {}
    for (n, v) in data_helper.list_items('image'):
        img_data[n] = v
    return {'context': context.get_context(), 'text': text_data, 'image': img_data, }
