{
  if (!addr.isAllocated() && !addr.isPending()) {
    try {
      if (!addr.isAssigned() && !addr.isPending()) {
        addr.pendingAssignment();
        try {
          addr.assign(vm).clearPending();
        }
 catch (        final Exception e1) {
          LOG.debug(e1,e1);
        }
      }
    }
 catch (    final Exception e1) {
      LOG.debug(e1,e1);
    }
  }
 else   if (!addr.isAssigned()) {
    try {
      addr.assign(vm).clearPending();
    }
 catch (    final Exception e1) {
      LOG.debug(e1,e1);
    }
  }
 else {
    LOG.debug("Address usage checked: " + addr);
  }
}
