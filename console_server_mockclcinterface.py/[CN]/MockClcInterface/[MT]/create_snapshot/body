def create_snapshot(self, volume_id, description):
    idx = map(itemgetter('id'), self.volumes).index(volume_id)
    newsnap = {'status': 'completed', '__obj_name__': 'Snapshot', 'description': description, 'tags': {}, 'start_time': datetime.datetime.now().strftime('%Y-%m-%dT%H:%M:%S.%fZ'), 'id': self.__gen_id__('snap'), 'volume_size': self.volumes[idx]['size'], 'volume_id': volume_id, 'progress': '100%', 'owner_id': '072279894205', }
    self.snapshots.append(newsnap)
    return newsnap
