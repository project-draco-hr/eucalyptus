{
  if (roleName == null || accountName == null) {
    throw new AuthException("Empty user name or account name");
  }
  try (final TransactionResource db=Entities.transactionFor(RoleEntity.class)){
    @SuppressWarnings("unchecked") RoleEntity result=(RoleEntity)Entities.createCriteria(RoleEntity.class).add(Restrictions.eq("name",roleName)).createCriteria("account").add(Restrictions.eq("name",accountName)).setCacheable(true).uniqueResult();
    return result != null;
  }
 catch (  Exception e) {
    throw new AuthException("Failed to find role",e);
  }
}
