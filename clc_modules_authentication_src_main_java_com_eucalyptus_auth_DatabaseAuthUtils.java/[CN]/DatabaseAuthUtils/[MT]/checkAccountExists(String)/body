{
  if (accountName == null) {
    throw new AuthException(AuthException.EMPTY_ACCOUNT_NAME);
  }
  EntityWrapper<AccountEntity> db=EntityWrapper.get(AccountEntity.class);
  try {
    @SuppressWarnings("unchecked") AccountEntity result=(AccountEntity)db.createCriteria(AccountEntity.class).setCacheable(true).add(Restrictions.eq("name",accountName)).uniqueResult();
    db.commit();
    return result != null;
  }
 catch (  Exception e) {
    db.rollback();
    throw new AuthException("Failed to find account",e);
  }
}
