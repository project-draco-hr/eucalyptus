{
  if (instanceProfileName == null || accountName == null) {
    throw new AuthException("Empty instance profile name or account name");
  }
  final EntityWrapper<InstanceProfileEntity> db=EntityWrapper.get(InstanceProfileEntity.class);
  try {
    @SuppressWarnings("unchecked") InstanceProfileEntity result=(InstanceProfileEntity)db.createCriteria(InstanceProfileEntity.class).add(Restrictions.eq("name",instanceProfileName)).createCriteria("account").add(Restrictions.eq("name",accountName)).setCacheable(true).uniqueResult();
    return result != null;
  }
 catch (  Exception e) {
    throw new AuthException("Failed to find instance profile",e);
  }
 finally {
    db.rollback();
  }
}
