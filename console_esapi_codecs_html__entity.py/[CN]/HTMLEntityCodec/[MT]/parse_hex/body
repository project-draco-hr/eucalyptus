def parse_hex(self, pbs):
    '\n        Parse a hex encoded entity\n        \n        @param pbs: the PushbackString\n        @return: a single character from the string\n        '
    buf = ''
    while pbs.has_next():
        char = pbs.peek()
        if esapi.codecs.push_back_string.is_hex_digit(char):
            buf += char
            pbs.next()
        elif (char == ';'):
            pbs.next()
            break
        else:
            pbs.reset()
            return None
    try:
        i = int(buf, 16)
        return unichr(i)
    except ValueError:
        return None
