def get_register_parser(self):
    parser = OptionParser('usage: %prog [options]', version='Eucalyptus %prog VERSION')
    parser.add_option('-H', '--host', dest='host', help='Hostname of the cluster.')
    parser.add_option('-p', '--port', dest='port', type='int', default=8774, help='Port for the cluster.')
    parser.add_option('-P', '--partition', dest='partition', help='Partition for the cluster.')
    (options, args) = parser.parse_args()
    if (len(args) != 1):
        print 'ERROR  Required argument CLUSTERNAME is missing or malformed.'
        parser.print_help()
        sys.exit(1)
    else:
        return (options, args)
