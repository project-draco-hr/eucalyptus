def create_load_balancer(self, name, zones, listeners, subnets=None, security_groups=None, scheme='internet-facing', callback=None):
    self.caches['balancers'].expireCache()
    params = {'name': name, 'zones': zones, 'listeners': listeners, 'subnets': subnets, 'security_groups': security_groups, 'scheme': scheme, }
    Threads.instance().runThread(self.__create_load_balancer_cb__, (params, callback))
