{
  EntityWrapper<Counters> db=Counters.getEntityWrapper();
  try {
    db.getUnique(new Counters());
  }
 catch (  EucalyptusCloudException e) {
    try {
      db.add(new Counters());
      db.commit();
    }
 catch (    Exception e1) {
      LOG.error(e1,e1);
      LOG.fatal("Failed to add the system counters.");
      System.exit(-1);
    }
  }
}
