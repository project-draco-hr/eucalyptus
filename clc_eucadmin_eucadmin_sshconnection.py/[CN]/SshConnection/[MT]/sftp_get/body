def sftp_get(self, localfilepath, remotefilepath):
    "\n        sftp transfer file from remotefilepath to remote system at localfilepath\n        :param localfilepath: path where remote file 'get' will place file on local system\n        :param remotefilepath: destination path for file to 'get' on remote system\n        "
    if (not self.connection._transport):
        self.refresh_connection()
    transport = self.connection._transport
    sftp = paramiko.SFTPClient.from_transport(transport)
    sftp.get(remotepath=remotefilepath, localpath=localfilepath)
    sftp.close()
