def mask_password(self, pass_string):
    "\n        Replace all but first and last chars with '*' of provided password string.\n\n        :param pass_string: string representing a password to hide/format\n        :return: Formatted hidden password\n        "
    password = copy.copy(pass_string)
    show = ''
    if (not password):
        return password
    if (len(password) > 3):
        length = (len(password) - 2)
    else:
        length = len(password)
    for x in xrange(length):
        show += '*'
    if (len(password) > 3):
        show = (password[0] + show)
        show += password[(len(password) - 1)]
    return show
