def debug(self, msg, verbose=None):
    '\n        simple method for printing debug.\n        :param msg: - mandatory - string to be printed\n        :param verbose: boolean to override global verbose flag\n        '
    if (verbose is None):
        verbose = self.verbose
    if (verbose is True):
        if (self.debugmethod is None):
            print str(msg)
        else:
            self.debugmethod(msg)
