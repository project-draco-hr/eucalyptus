def sys(self, cmd, verbose=False, timeout=120, listformat=True, code=None):
    "\n        Issue a command cmd and return output in list format\n\n        :param cmd: - mandatory - string representing the command to be run  against the remote ssh session\n        :param verbose: - optional - will default to global setting, can be set per cmd() as well here\n        :param timeout: - optional - integer used to timeout the overall cmd() operation in case of remote blockingd\n        :param listformat:  - optional - format output into single buffer or list of lines\n        :param code: - optional - expected exitcode, will except if cmd's  exitcode does not match this value\n        "
    out = self.cmd(cmd, verbose=verbose, timeout=timeout, listformat=listformat)
    output = out['output']
    if (code is not None):
        if (out['status'] != code):
            self.debug(output)
            raise CommandExitCodeException(((((('Cmd:' + str(cmd)) + ' failed with status code:') + str(out['status'])) + ', output:') + str(output)))
    return output
