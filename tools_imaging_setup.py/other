import glob
import sys
import os
from distutils.command.build_scripts import build_scripts
from distutils.command.install_data import install_data
from distutils.core import setup
from distutils.sysconfig import get_python_lib
import fileinput
import ConfigParser
cfg = ConfigParser.ConfigParser()
cfg.read('setup.cfg')
prefix = cfg.get('install', 'prefix')
version = cfg.get('meta', 'version')
setup(name='eucatoolkit', version=version, description='Eucalyptus Imaging Toolkit', long_description='CLI tools to help manage images in Eucalyptus', author='Eucalyptus Systems', author_email='devel@eucalyptus.com', url='http://eucalyptus.com/', packages=['eucatoolkit', 'eucatoolkit.stages'], license='BSD', platforms='Posix; MacOS X; Windows', classifiers=['Development Status :: 5 - Production/Stable', 'Intended Audience :: Developers', 'License :: OSI Approved :: BSD License', 'Operating System :: OS Independent', 'Topic :: Internet'], install_requires=['argparse'], data_files=[], cmdclass={'build_scripts': build_scripts_with_path_headers, }, scripts=['bin/euca-run-workflow'])
