{
  GroupByCriterion crit=getCriterion(criterion);
  System.out.println(" ----> GENERATING INSTANCE REPORT WITH " + crit);
  InstanceDisplayDb db=InstanceDisplayDb.getInstance();
  OutputStream dest=null;
  try {
    dest=new FileOutputStream(destFile);
    List<InstanceDisplayBean> list=db.search(period,crit,Units.DEFAULT_DISPLAY_UNITS);
    generateReport(instanceReportFile,format,Units.DEFAULT_DISPLAY_UNITS,null,crit,list,dest);
  }
 catch (  FileNotFoundException e) {
    e.printStackTrace();
  }
 finally {
    if (dest != null) {
      try {
        dest.close();
      }
 catch (      IOException iox) {
        iox.printStackTrace();
      }
    }
  }
}
