{
  if (singleton != null) {
    return singleton;
  }
 else {
synchronized (HostManager.class) {
      if (singleton != null) {
        return singleton;
      }
 else {
        singleton=new HostManager();
        LOG.info("Membership address for localhost: " + Hosts.localHost());
        ListenerRegistry.getInstance().register(ClockTick.class,singleton);
        return singleton;
      }
    }
  }
}
