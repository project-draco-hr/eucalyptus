{
  if (!Bootstrap.isFinished()) {
    for (    Host host : hosts) {
      if (Eucalyptus.setupLocals(host.getHostAddress())) {
        HostManager.this.view.markReady();
      }
    }
    for (    Host host : hosts) {
      Hosts.updateHost(HostManager.getCurrentView(),host);
    }
  }
 else {
    for (    Host host : hosts) {
      Hosts.updateHost(HostManager.getCurrentView(),host);
    }
  }
}
