{
  if (!Bootstrap.isFinished()) {
    for (    Host host : hosts) {
      if (host.hasDatabase() && Eucalyptus.setupServiceDependencies(host.getBindAddress())) {
        HostManager.this.view.markReady();
      }
    }
    for (    Host host : hosts) {
      Hosts.update(host);
    }
  }
 else {
    for (    Host host : hosts) {
      Hosts.update(host);
    }
  }
}
