{
  if (o == null)   return false;
  boolean removed=false;
  fullyLock();
  try {
    Node<E> trail=head;
    Node<E> p=head.next;
    while (p != null) {
      if (o.equals(p.item)) {
        removed=true;
        break;
      }
      trail=p;
      p=p.next;
    }
    if (removed) {
      p.item=null;
      trail.next=p.next;
      if (last == p)       last=trail;
      if (count.getAndDecrement() == capacity)       notFull.signalAll();
    }
  }
  finally {
    fullyUnlock();
  }
  return removed;
}
