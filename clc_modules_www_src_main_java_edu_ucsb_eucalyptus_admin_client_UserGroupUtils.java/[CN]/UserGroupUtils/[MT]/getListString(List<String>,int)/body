{
  StringBuffer sb=new StringBuffer();
  if (list != null) {
    int i=0;
    for (    String value : list) {
      if (max > 0 && i >= max) {
        break;
      }
      if (sb.length() > 0) {
        sb.append(", ");
      }
      sb.append(value);
      i++;
    }
    if (max > 0 && max < list.size()) {
      sb.append(", ...");
    }
  }
  return sb.toString();
}
