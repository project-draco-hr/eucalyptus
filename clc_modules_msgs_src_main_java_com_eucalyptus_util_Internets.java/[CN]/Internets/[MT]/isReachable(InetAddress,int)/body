{
  try {
    timeoutMillis=timeoutMillis / 1000;
    return (Boolean)Groovyness.eval(String.format("ret = \"/bin/ping -W %d -c 1 %s\".execute( ); ret.waitFor(); ret.exitValue() == 0;",timeoutMillis,addr.getHostAddress()));
  }
 catch (  ScriptExecutionFailedException ex) {
    Logs.extreme().error(ex,ex);
    return addr.isReachable(timeoutMillis);
  }
}
