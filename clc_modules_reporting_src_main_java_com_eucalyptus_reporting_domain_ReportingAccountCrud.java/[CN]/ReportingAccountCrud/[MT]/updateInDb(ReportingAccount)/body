{
  LOG.debug("Update reporting account in db, account:" + account);
  try (final TransactionResource db=Entities.transactionFor(ReportingAccount.class)){
    ReportingAccount reportingAccount=(ReportingAccount)Entities.createQuery(ReportingAccount.class,"from ReportingAccount where id = ?").setString(0,account.getId()).uniqueResult();
    reportingAccount.setName(account.getName());
    db.commit();
  }
 catch (  Exception ex) {
    LOG.error(ex);
    throw new RuntimeException(ex);
  }
}
