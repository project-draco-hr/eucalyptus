{
  if (userId == null)   volumeIds.add("verbose");
  final DescribeVolumesTask task=new DescribeVolumesTask(volumeIds);
  final CheckedListenableFuture<Boolean> result=task.dispatch(new Ec2Context(userId));
  try {
    if (result.get()) {
      return task.getVolumes();
    }
 else     throw new EucalyptusActivityException(task.getErrorMessage() != null ? task.getErrorMessage() : "failed to describe volumes");
  }
 catch (  Exception ex) {
    throw Exceptions.toUndeclared(ex);
  }
}
