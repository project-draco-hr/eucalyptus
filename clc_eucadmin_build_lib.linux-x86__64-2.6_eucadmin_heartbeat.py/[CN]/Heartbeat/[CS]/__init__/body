def __init__(self, host, port=8773, path='services/Heartbeat', is_secure=False):
    self.host = host
    self.service = service
    self.port = port
    self.path = path
    self.is_secure = is_secure
    if self.is_secure:
        self.scheme = 'https'
    else:
        self.scheme = 'http'
    t = (self.scheme, ('%s:%s' % (self.host, self.port)), self.path, '', '')
    self.url = urlparse.urlunsplit(t)
    self.data = None
    self.get_heartbeat_data()
