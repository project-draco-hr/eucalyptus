def get_argument_list(self, name, name_suffix=None):
    ret = []
    index = 1
    pattern = (name + '.%d')
    if name_suffix:
        pattern = ((pattern + '.') + name_suffix)
    val = self.get_argument((pattern % index), None)
    while val:
        ret.append(val)
        index = (index + 1)
        val = self.get_argument((pattern % index), None)
    return ret
