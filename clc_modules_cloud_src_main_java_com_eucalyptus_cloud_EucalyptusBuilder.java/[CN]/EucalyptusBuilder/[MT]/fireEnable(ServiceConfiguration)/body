{
  if (!config.isVmLocal()) {
    for (    Host h : Hosts.list()) {
      if (h.getHostAddresses().contains(config.getInetAddress())) {
        EventRecord.here(EucalyptusBuilder.class,EventType.COMPONENT_SERVICE_ENABLED,config.toString()).info();
        return;
      }
    }
    throw new ServiceRegistrationException("There is no host in the system (yet) for the given cloud controller configuration: " + config.getFullName() + ".\nHosts are: "+ Hosts.list());
  }
}
