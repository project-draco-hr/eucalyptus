{
  if (event.getThrowableInformation() != null) {
    Throwable t=event.getThrowableInformation().getThrowable();
    if (t != null && t instanceof GenericJDBCException) {
      return " -- MARK -- ";
    }
  }
  String[] messages=event.getRenderedMessage().split("\n");
  StringBuffer sb=new StringBuffer();
  boolean con=false;
  for (int i=0; i < messages.length; i++) {
    String substring=messages[i];
    LoggingEvent n=new LoggingEvent(event.getFQNOfLoggerClass(),event.getLogger(),event.getTimeStamp(),event.getLevel(),substring,event.getThreadName(),event.getThrowableInformation(),null,null,null);
    sb.append((!con) ? super.format(n) : continuation.format(n));
    if (continuation == null) {
      continuation=new PatternLayout(sb.toString().split("\\|")[0].replaceAll("."," ") + "| " + CONTINUATION);
    }
    con=true;
  }
  return sb.toString();
}
