{
  EntityWrapper<ReportingUser> entityWrapper=EntityWrapper.get(ReportingUser.class);
  try {
    ReportingUser reportingUser=(ReportingUser)entityWrapper.createQuery("from ReportingUser where id = ?").setString(0,id).uniqueResult();
    reportingUser.setName(name);
    entityWrapper.commit();
  }
 catch (  Exception ex) {
    LOG.error(ex);
    entityWrapper.rollback();
    throw new RuntimeException(ex);
  }
}
