{
  String returnValue;
  returnValue=SystemUtil.run(new String[]{WalrusProperties.eucaHome + WalrusProperties.EUCA_ROOT_WRAPPER,"drbdadm","status"});
  if (returnValue.length() == 0) {
    Faults.advisory(Components.lookup(Walrus.class).getLocalServiceConfiguration(),new EucalyptusCloudException("drbdadm not found: Is drbd installed?"));
  }
}
