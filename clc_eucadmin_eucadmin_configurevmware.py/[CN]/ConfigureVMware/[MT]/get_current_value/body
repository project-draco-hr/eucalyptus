def get_current_value(self, prop_name):
    '\n        Reads the current value from the system and stores it to\n        a temp file.  Returns the path to the temp file.\n        '
    value = ''
    obj = DescribeProperties()
    data = obj.main()
    props = getattr(data, 'euca:properties')
    for prop in props:
        if (prop['euca:name'] == prop_name):
            value = prop['euca:value']
            if (value == VMwareConfigDefault):
                value = ''
            elif (value == {}):
                value = ''
    if self.verbose_flg:
        print '---Current value is:'
        print value
    return value
