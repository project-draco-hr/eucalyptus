def edit_file(self, path):
    editor = os.environ.get('EDITOR', None)
    if editor:
        cmd_string = ('%s %s' % (editor, path))
        print ('---running command %s' % cmd_string)
        cmd = Command(cmd_string)
        if (cmd.status != 0):
            print 'Edit operation failed'
            sys.exit(1)
    else:
        print 'EDITOR not defined'
        sys.exit(1)
