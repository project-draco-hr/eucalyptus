def get_register_parser(self):
    self.parser = OptionParser('usage: %prog [options]', version='Eucalyptus %prog VERSION')
    self.parser.add_option('-H', '--host', dest='host', help='Hostname of the cluster.')
    self.parser.add_option('-p', '--port', dest='port', type='int', default=8774, help='Port for the cluster.')
    self.parser.add_option('-P', '--partition', dest='partition', help='Partition for the cluster.')
    (options, args) = self.parser.parse_args()
    if (len(args) != 1):
        s = 'ERROR  Required argument CLUSTERNAME is missing or malformed.'
        self.error(s)
    else:
        return (options, args)
