def _read_manifest_from_file(self):
    self.log.debug('Reading from local manifest file')
    manifest_path = os.path.expanduser(os.path.abspath(self.args.manifest))
    if (not os.path.exists(manifest_path)):
        raise ArgumentTypeError("Manifest '{0}' does not exist".format(self.args.manifest))
    if (not os.path.isfile(manifest_path)):
        raise ArgumentTypeError("Manifest '{0}' is not a file".format(self.args.manifest))
    return DownloadManifest.read_from_file(manifest_path, self.args.xsd, key_filename=self.args.privatekey)
