def _read_manifest_from_stdin(self):
    self.log.debug('Reading Manifest from stdin')
    fileobj = BytesIO()
    while True:
        chunk = sys.stdin.read(self._chunk_size)
        if (not chunk):
            break
        self.log.debug(('Chunk:' + str(chunk)))
        fileobj.write(chunk)
    fileobj.flush()
    fileobj.seek(0)
    with fileobj:
        manifest = DownloadManifest._read_from_fileobj(manifest_fileobj=fileobj, xsd=self.args.xsd, key_filename=self.args.privatekey)
    return manifest
