def _validate_written_image_size(self, expected_size, filepath):
    '\n        Attempts to compare an expected file size with the size found on disk.\n        :param expected_size: size in bytes\n        :param filepath: path to local file to read and compare size to\n        :raises ValueError\n        '
    self.log.debug('Validating size:"{0}", for file:{1}:'.format(expected_size, filepath))
    file_size = os.path.getsize(filepath)
    if (file_size != expected_size):
        raise ValueError('Written Image size:{0} does not equal expected size:{1}'.format(file_size, expected_size))
