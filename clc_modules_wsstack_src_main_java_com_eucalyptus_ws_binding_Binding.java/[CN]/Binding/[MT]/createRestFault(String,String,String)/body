{
  return new StringBuffer().append("<?xml version=\"1.0\"?><Response><Errors><Error><Code>").append(faultCode.replaceAll("<","&lt;").replaceAll(">","&gt;")).append("</Code><Message>").append(faultReason.replaceAll("<","&lt;").replaceAll(">","&gt;")).append("</Message></Error></Errors><RequestID>").append(faultDetails.replaceAll("<","&lt;").replaceAll(">","&gt;")).append("</RequestID></Response>").toString();
}
