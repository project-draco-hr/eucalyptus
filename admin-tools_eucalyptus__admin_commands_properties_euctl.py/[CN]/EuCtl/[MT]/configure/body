def configure(self):
    PropertiesRequest.configure(self)
    argcheck = None
    if self.args.get('dump'):
        argcheck = '--dump'
    elif self.args.get('edit'):
        argcheck = '--edit'
    if argcheck:
        if (len((self.args.get('prop_pairs') or [])) != 1):
            raise ArgumentError('argument {0} must be accompanied by exactly one property name'.format(argcheck))
        if self.args.get('prop_pairs')[0][1]:
            raise ArgumentError('argument {0}: a value may not accompany the property name'.format(argcheck))
