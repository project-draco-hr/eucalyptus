{
  try (TransactionResource db=Entities.transactionFor(StackEntity.class)){
    Criteria criteria=Entities.createCriteria(StackEntity.class).add(Restrictions.eq("stackName",stackEntity.getStackName())).add(Restrictions.eq("accountId",stackEntity.getAccountId())).add(Restrictions.eq("recordDeleted",Boolean.FALSE));
    List<StackEntity> EntityList=criteria.list();
    if (!EntityList.isEmpty()) {
      throw new Exception("Stack already exists");
    }
    if (stackEntity.getCreateOperationTimestamp() == null) {
      stackEntity.setCreateOperationTimestamp(new Date());
    }
    Entities.persist(stackEntity);
    db.commit();
  }
 }
