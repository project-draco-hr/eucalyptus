{
  try (TransactionResource db=Entities.transactionFor(StackEntity.class)){
    Criteria criteria=Entities.createCriteria(StackEntity.class).add(Restrictions.eq("stackName",stack.getStackName())).add(Restrictions.eq("recordDeleted",Boolean.FALSE));
    List<StackEntity> EntityList=criteria.list();
    if (!EntityList.isEmpty()) {
      throw new Exception("Stack already exists");
    }
    StackEntity stackEntity=stackToStackEntity(stack,accountId);
    Entities.persist(stackEntity);
    db.commit();
  }
 }
