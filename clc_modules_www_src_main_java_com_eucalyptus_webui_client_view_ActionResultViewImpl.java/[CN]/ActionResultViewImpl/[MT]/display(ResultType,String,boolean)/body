{
  this.loading.setVisible(false);
switch (type) {
case ERROR:
    icon.setClassName(iconStyle.red());
  break;
case INFO:
icon.setClassName(iconStyle.green());
break;
default :
icon.setClassName(iconStyle.none());
break;
}
this.message.setText(message);
this.button.setVisible(needsConfirmation);
}
