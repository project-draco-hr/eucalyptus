{
  return Threads.lookup(Empyrean.class,ListenerRegistry.class,type.getClass().getCanonicalName()).submit(new Callable<Throwable>(){
    @Override public Throwable call() throws Exception {
      try {
        fireEvent(type,e);
        return null;
      }
 catch (      Exception ex) {
        LOG.error(ex);
        return ex;
      }
    }
  }
);
}
