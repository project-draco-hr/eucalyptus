{
  try (TransactionResource db=Entities.transactionFor(StackResourceEntity.class)){
    Criteria criteria=Entities.createCriteria(StackResourceEntity.class).add(Restrictions.eq("accountId",accountId)).add(Restrictions.eq("stackId",stackId)).add(Restrictions.eq("logicalResourceId",logicalResourceId)).add(Restrictions.eq("recordDeleted",Boolean.FALSE));
    List<StackResourceEntity> entityList=criteria.list();
    for (    StackResourceEntity stackResourceEntity : entityList) {
      stackResourceEntity.setResourceStatus(status);
      stackResourceEntity.setResourceStatusReason(statusReason);
    }
    db.commit();
  }
 }
