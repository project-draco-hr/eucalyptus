def get_euca_user(self):
    euca_user = os.environ.get('EUCA_USER', None)
    if (not euca_user):
        try:
            pwd.getpwnam('eucalyptus')
            euca_user = 'eucalyptus'
        except KeyError:
            self.error('EUCA_USER is not defined')
            sys.exit(1)
    return euca_user
