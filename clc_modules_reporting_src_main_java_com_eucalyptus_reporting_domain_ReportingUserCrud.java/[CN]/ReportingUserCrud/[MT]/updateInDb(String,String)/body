{
  LOG.debug("Update reporting user in db, id:" + id + " name:"+ name);
  try (final TransactionResource db=Entities.transactionFor(ReportingUser.class)){
    ReportingUser reportingUser=(ReportingUser)Entities.createQuery(ReportingUser.class,"from ReportingUser where id = ?").setString(0,id).uniqueResult();
    reportingUser.setName(name);
    db.commit();
  }
 catch (  Exception ex) {
    LOG.error(ex);
    throw new RuntimeException(ex);
  }
}
