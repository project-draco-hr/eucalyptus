{
  try {
    if (uri.getScheme().matches(".*vm.*") || (uri.getHost() != null && NetworkUtil.testLocal(uri.getHost()))) {
      return new LocalConfiguration(this.component.getPeer(),uri);
    }
 else {
      return new RemoteConfiguration(this.component.getPeer(),uri);
    }
  }
 catch (  Throwable t) {
    return new LocalConfiguration(this.component.getPeer(),uri);
  }
}
