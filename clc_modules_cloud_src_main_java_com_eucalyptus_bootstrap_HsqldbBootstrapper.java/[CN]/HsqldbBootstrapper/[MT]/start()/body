{
  while (this.db.getState() != 1) {
    Throwable t=this.db.getServerError();
    if (t != null) {
      LOG.error(t,t);
      throw new RuntimeException(t);
    }
    LOG.info("Waiting for database to start...");
  }
  if (!hack) {
    StartupChecks.createDb();
    hack=true;
  }
  return true;
}
