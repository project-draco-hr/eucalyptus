{
  try (final TransactionResource db=Entities.transactionFor(InstanceProfileEntity.class)){
    final InstanceProfileEntity instanceProfileEntity=DatabaseAuthUtils.getUnique(InstanceProfileEntity.class,"instanceProfileId",getInstanceProfileId());
    final RoleEntity roleEntity=role == null ? null : DatabaseAuthUtils.getUnique(RoleEntity.class,"roleId",role.getRoleId());
    instanceProfileEntity.setRole(roleEntity);
    db.commit();
  }
 catch (  Exception e) {
    Debugging.logError(LOG,e,"Failed to assign role for " + this.delegate.getName());
    throw new AuthException("Failed to assign role",e);
  }
}
