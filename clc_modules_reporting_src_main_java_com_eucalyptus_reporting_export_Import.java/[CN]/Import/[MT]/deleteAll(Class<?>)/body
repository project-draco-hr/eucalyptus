{
  final EntityTransaction transaction=Entities.get(persistentClass);
  try {
    final List<?> entities=Entities.createCriteria(persistentClass).setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY).setCacheable(false).list();
    for (    final Object entity : entities) {
      Entities.delete(entity);
    }
  }
  finally {
    transaction.commit();
  }
}
