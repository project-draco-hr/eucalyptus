{
  while (true) {
    try {
      Credentials.init();
      for (      Component c : Component.values()) {
        try {
          if (!SystemCredentialProvider.check(c))           SystemCredentialProvider.init(c);
        }
 catch (        Exception e) {
          LOG.error(e);
        }
      }
      break;
    }
 catch (    Exception e) {
      LOG.error(e);
      LOG.fatal("Waiting for system credentials before proceeding with startup...");
    }
    try {
      Thread.sleep(2000);
    }
 catch (    Exception e) {
    }
  }
  return true;
}
