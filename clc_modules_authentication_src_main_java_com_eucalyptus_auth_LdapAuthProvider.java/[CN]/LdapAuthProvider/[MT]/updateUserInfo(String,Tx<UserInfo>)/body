{
  try {
    if (infoTx != null) {
      UserInfo search=new UserInfo(name);
      infoTx.fire(search);
      EucaLdapHelper.updateUser(null,search);
    }
  }
 catch (  EntryNotFoundException e) {
    LOG.error(e,e);
    throw new NoSuchUserException(e);
  }
catch (  LdapException e) {
    LOG.error(e,e);
  }
catch (  Throwable e) {
    LOG.error(e,e);
  }
}
