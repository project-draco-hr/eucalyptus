{
  try {
    UserEntity search=new UserEntity();
    search.setName(userName);
    return EucaLdapHelper.getUsers(search,null).get(0);
  }
 catch (  EntryNotFoundException e) {
    LOG.error(e,e);
    throw new NoSuchUserException(e);
  }
catch (  LdapException e) {
    LOG.error(e,e);
  }
  return null;
}
