{
  final CancelConversionTaskResponseType reply=request.getReply();
  try {
    if (request.getConversionTaskId().startsWith("import-emi"))     throw new ImagingServiceException("Cannot cancel emi conversion tasks");
    ImagingTasks.setState(Contexts.lookup().getUserFullName(),request.getConversionTaskId(),ImportTaskState.CANCELLING,null);
    reply.set_return(true);
  }
 catch (  final ImagingServiceException ex) {
    throw ex;
  }
catch (  final Exception ex) {
    throw new ImagingServiceException(ImagingServiceException.INTERNAL_SERVER_ERROR,"Failed to cancel conversion task",ex);
  }
  return reply;
}
