{
  tracker=new Tracker();
  if (tracker.exists()) {
    WalrusProperties.enableTorrents=true;
    tracker.start();
    Runtime.getRuntime().addShutdownHook(new Thread(){
      public void run(){
        tracker.bye();
        Collection<TorrentClient> torrentClients=Torrents.getClients();
        for (        TorrentClient torrentClient : torrentClients) {
          torrentClient.bye();
        }
      }
    }
);
  }
}
