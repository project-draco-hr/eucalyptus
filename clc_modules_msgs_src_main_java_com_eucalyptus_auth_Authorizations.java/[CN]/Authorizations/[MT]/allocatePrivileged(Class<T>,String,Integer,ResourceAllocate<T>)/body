{
  try {
    Context context=Contexts.lookup();
    policyEngine.evaluateQuota(resourceType,resourceName,quantity,context.getRequest(),context.getUser());
    if (allocator != null) {
      allocator.allocate();
    }
  }
 catch (  ResourceAllocationException ex) {
    LOG.error(ex,ex);
    throw ex;
  }
catch (  AuthException ex) {
    LOG.error(ex,ex);
    throw ex;
  }
}
