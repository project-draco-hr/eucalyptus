{
  return new Predicate<Throwable>(){
    @Override public boolean apply(    final Throwable ex){
      if (State.ENABLED.isIn(parent) && (parent.isVmLocal() || (BootstrapArgs.isCloudController() && parent.isHostLocal()))) {
        try {
          Topology.disable(parent);
        }
 catch (        ServiceRegistrationException ex1) {
          LOG.error("Transition failed on " + parent.lookupComponent().getName() + " due to "+ ex.toString(),ex);
        }
      }
      return true;
    }
  }
;
}
