{
  if (!hasAdministrativePrivilege) {
    throw new AuthException(AuthException.ACCESS_DENIED);
  }
  User admin=account.lookupUserByName(User.ACCOUNT_ADMIN);
  Policy policy=null;
  for (  Policy p : admin.getPolicies()) {
    if (p.getName().equals(policyName)) {
      policy=p;
      break;
    }
  }
  return policy;
}
