{
  if (!requestUser.isSystemAdmin()) {
    if (!requestUser.getAccount().getAccountNumber().equals(account.getAccountNumber())) {
      throw new AuthException(AuthException.ACCESS_DENIED);
    }
    if (!requestUser.getUserId().equals(user.getUserId()) && (!Permissions.isAuthorized(PolicySpec.VENDOR_IAM,PolicySpec.IAM_RESOURCE_USER,Accounts.getUserFullName(user),account,PolicySpec.IAM_UPDATELOGINPROFILE,requestUser) || (email != null && !Permissions.isAuthorized(PolicySpec.VENDOR_IAM,PolicySpec.IAM_RESOURCE_USER,Accounts.getUserFullName(user),account,PolicySpec.IAM_UPDATEUSER,requestUser)))) {
      throw new AuthException(AuthException.ACCESS_DENIED);
    }
  }
  setUserPassword(user,newPass);
  if (email != null) {
    user.setInfo(User.EMAIL,email);
  }
}
