{
  final Account acct=requestUser.getAccount();
  if (!requestUser.isSystemAdmin()) {
    if (!(Permissions.isAuthorized(PolicySpec.VENDOR_IAM,PolicySpec.IAM_UPDATESERVERCERTIFICATE,certName,acct,PolicySpec.IAM_UPDATESERVERCERTIFICATE,requestUser) && Permissions.isAuthorized(PolicySpec.VENDOR_IAM,PolicySpec.IAM_UPDATESERVERCERTIFICATE,newCertName,acct,PolicySpec.IAM_UPDATESERVERCERTIFICATE,requestUser)))     throw new AuthException(AuthException.ACCESS_DENIED);
  }
  try {
    acct.updateServerCeritificate(certName,newCertName,newPath);
  }
 catch (  final AuthException ex) {
    throw ex;
  }
catch (  final Exception ex) {
    throw ex;
  }
}
