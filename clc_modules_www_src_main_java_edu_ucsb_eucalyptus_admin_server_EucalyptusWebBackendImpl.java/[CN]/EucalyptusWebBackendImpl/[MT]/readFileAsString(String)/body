{
  byte[] buffer=new byte[(int)new File(filePath).length()];
  BufferedInputStream f=null;
  try {
    f=new BufferedInputStream(new FileInputStream(filePath));
    f.read(buffer);
  }
  finally {
    if (f != null)     try {
      f.close();
    }
 catch (    IOException ignored) {
    }
  }
  return new String(buffer);
}
