{
  HorizontalPanel buttonPanel=new HorizontalPanel();
  setHTML("<h3>Rightscale registration</h3> You are about to open a new window to Rightscale's Web site, on which you will be able to complete registraton. </p> TODO: warn about IP address discrepacies, if necessary. </p> " + rightscaleUrl);
  Button okButton=new Button("OK",new ClickListener(){
    public void onClick(    Widget sender){
      MyDialog.this.hide();
      Window.open(rightscaleUrl,"_blank","");
    }
  }
);
  Button cancelButton=new Button("Cancel",new ClickListener(){
    public void onClick(    Widget sender){
      MyDialog.this.hide();
    }
  }
);
  buttonPanel.add(okButton);
  buttonPanel.add(cancelButton);
  setWidget(buttonPanel);
}
