{
  try {
    if (tcpListener == null) {
      if (EMPTY.equals(dns_listener_address))       tcpListener=new TCPListener(InetAddress.getByName(Internets.localHostAddress()),DNSProperties.PORT);
 else       tcpListener=new TCPListener(InetAddress.getByName(dns_listener_address),DNSProperties.PORT);
      tcpListener.start();
    }
  }
 catch (  UnknownHostException ex) {
    LOG.error(ex);
    throw ex;
  }
}
