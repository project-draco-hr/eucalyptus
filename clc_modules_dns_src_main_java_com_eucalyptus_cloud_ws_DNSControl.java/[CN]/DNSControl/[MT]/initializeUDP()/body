{
  try {
    if (udpListener == null) {
      if (EMPTY.equals(dns_listener_address))       udpListener=new UDPListener(InetAddress.getByName(Internets.localHostAddress()),DNSProperties.PORT);
 else       udpListener=new UDPListener(InetAddress.getByName(dns_listener_address),DNSProperties.PORT);
      udpListener.start();
    }
  }
 catch (  SocketException ex) {
    LOG.error(ex);
    throw ex;
  }
}
