{
  final Record query=request.getQuery();
  final InetAddress source=request.getRemoteAddress();
  return RequestType.PTR.apply(query) ? super.checkAccepts(request) : super.checkAccepts(request) && InstanceNetworkResolver.tryResolve(source).isPresent() && query.getName().subdomain(InstanceDomainNames.EXTERNAL.get());
}
