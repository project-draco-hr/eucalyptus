{
  return new ValueChecker(){
    @Override public String check(    String value) throws InvalidValueException {
      if (Strings.isNullOrEmpty(value)) {
        throw new InvalidValueException("Password can not be empty");
      }
      int digit=0;
      int lowerCase=0;
      int upperCase=0;
      int special=0;
      for (int i=0; i < value.length(); i++) {
        char c=value.charAt(i);
        if (Character.isDigit(c)) {
          digit++;
        }
 else         if (Character.isLetter(c) && Character.isLowerCase(c)) {
          lowerCase++;
        }
 else         if (Character.isLetter(c) && Character.isUpperCase(c)) {
          upperCase++;
        }
 else         if (PASSWORD_SPECIAL.contains(c)) {
          special++;
        }
      }
      int length=value.length();
      if (length < PASSWORD_MINIMAL_LENGTH) {
        throw new InvalidValueException("Password length must be at least 6 characters");
      }
      int score=1;
      if (length >= 12) {
        score+=4;
      }
 else       if (length >= 8) {
        score+=2;
      }
      if (lowerCase > 0 && upperCase > 0) {
        score++;
      }
      if (digit > 1) {
        score+=2;
      }
 else       if (digit > 0) {
        score++;
      }
      if (special > 1) {
        score+=3;
      }
 else       if (special > 0) {
        score+=2;
      }
      if (score < 2) {
        return WEAK;
      }
 else       if (score < 4) {
        return MEDIUM;
      }
 else       if (score < 6) {
        return STRONG;
      }
 else {
        return STRONGER;
      }
    }
  }
;
}
