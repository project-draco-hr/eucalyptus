{
  ctxMgmtThreadPool.getExecutorService().submit(new Callable<MuleContext>(){
    @Override public MuleContext call() throws Exception {
      try {
        shutdown();
        startup();
      }
 catch (      Throwable ex) {
        LOG.error(ex,ex);
      }
      return context.getReference();
    }
  }
);
}
