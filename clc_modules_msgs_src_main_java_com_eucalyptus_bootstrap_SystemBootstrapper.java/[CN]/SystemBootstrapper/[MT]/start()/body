{
  try {
    Bootstrap.Stage stage=Bootstrap.transition();
    do {
      stage.start();
    }
 while ((stage=Bootstrap.transition()) != null);
  }
 catch (  BootstrapException e) {
    e.printStackTrace();
    throw e;
  }
catch (  Throwable t) {
    LOG.fatal(t,t);
    System.exit(1);
    throw t;
  }
  for (  Component c : Components.list()) {
    if (Components.lookup("eucalyptus").isLocal() && c.getPeer().isCloudLocal()) {
      Component.Transition.STARTING.apply(c);
    }
 else     if (c.getPeer().isAlwaysLocal()) {
      Component.Transition.STARTING.apply(c);
    }
  }
  return true;
}
