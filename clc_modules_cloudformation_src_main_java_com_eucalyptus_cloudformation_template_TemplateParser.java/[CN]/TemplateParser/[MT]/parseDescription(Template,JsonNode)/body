{
  String description=JSONHelper.getString(templateJsonNode,TemplateSection.Description.toString());
  if (description == null)   return;
  if (description.length() > 4000) {
    throw new ValidationErrorException("Template format error: " + TemplateSection.Description + " must "+ "be no longer than 4000 characters.");
  }
  template.setDescription(description);
}
