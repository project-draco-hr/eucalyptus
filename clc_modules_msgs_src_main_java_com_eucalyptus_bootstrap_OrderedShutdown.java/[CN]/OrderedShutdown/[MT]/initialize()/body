{
  Runtime.getRuntime().addShutdownHook(new Thread(){
    @Override public void run(){
      LOG.warn("Executing Shutdown Hooks...");
      ShutdownHook h;
      while ((h=hooks.poll()) != null) {
        try {
          h.getRunnable().run();
        }
 catch (        Exception e) {
          Exceptions.maybeInterrupted(e);
        }
      }
    }
  }
);
}
