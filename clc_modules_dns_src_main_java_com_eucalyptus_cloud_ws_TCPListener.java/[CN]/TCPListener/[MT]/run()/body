{
  while (true) {
    Socket s;
    try {
      if (socket != null) {
        LOG.info("Listening on port: " + port);
        s=socket.accept();
        ConnectionHandlerFactory.handle(s);
      }
 else {
        LOG.error("Cannot start service. Invalid socket.");
        return;
      }
    }
 catch (    IOException e) {
      LOG.error(e);
    }
  }
}
