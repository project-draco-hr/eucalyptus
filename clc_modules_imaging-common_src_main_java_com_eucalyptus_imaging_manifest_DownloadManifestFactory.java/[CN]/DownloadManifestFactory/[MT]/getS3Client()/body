{
  if (System.currentTimeMillis() > lastCreateTime + HOUR_IN_SEC) {
    LOG.debug("Refreshing S3Client");
    try {
      if (s3Client != null)       s3Client.close();
      s3Client=EucaS3ClientFactory.getEucaS3ClientForUser(Accounts.lookupSystemAccountByAlias(AccountIdentifiers.AWS_EXEC_READ_SYSTEM_ACCOUNT),(int)TimeUnit.HOURS.toSeconds(DEFAULT_EXPIRE_TIME_HR));
      lastCreateTime=System.currentTimeMillis();
    }
 catch (    AuthException ex) {
      throw new DownloadManifestException(ex);
    }
  }
  return s3Client;
}
