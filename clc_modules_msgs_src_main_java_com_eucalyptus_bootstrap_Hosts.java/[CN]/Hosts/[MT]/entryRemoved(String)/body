{
  LOG.info("Hosts.entryRemoved(): " + arg0);
  LOG.info("Hosts.entryRemoved(): " + hostMap.keySet());
  try {
    Host h=hostMap.get(arg0);
    teardown(Empyrean.class,h.getBindAddress());
    if (h.hasDatabase()) {
      Hosts.stopDbPool(h);
      teardown(Eucalyptus.class,h.getBindAddress());
    }
  }
 catch (  Exception ex) {
    LOG.error(ex,ex);
  }
}
