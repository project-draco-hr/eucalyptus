{
  if (Hosts.isCoordinator(input) && input.hasBootstrapped() && !input.isLocalHost()) {
    return Databases.enable(input);
  }
 else   if (input.hasDatabase() && input.hasSynced() && !input.isLocalHost()) {
    return Databases.enable(input);
  }
 else   if (input.isLocalHost()) {
    return Databases.enable(input);
  }
 else {
    return false;
  }
}
