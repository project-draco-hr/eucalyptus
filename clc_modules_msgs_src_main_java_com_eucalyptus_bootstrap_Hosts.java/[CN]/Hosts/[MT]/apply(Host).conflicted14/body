{
  if (!BootstrapArgs.isCloudController() && input.isLocalHost() && input.hasDatabase()) {
    try {
      hostMap.stop();
    }
 catch (    final Exception ex1) {
      LOG.error(ex1,ex1);
    }
    try {
      Bootstrap.initializeSystem();
      System.exit(123);
    }
 catch (    final Exception ex) {
      LOG.error(ex,ex);
      System.exit(123);
    }
    return true;
  }
 else {
    return false;
  }
}
