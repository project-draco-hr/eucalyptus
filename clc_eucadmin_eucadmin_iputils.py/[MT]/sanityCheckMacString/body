def sanityCheckMacString(mac_string):
    octets = mac_string.split(':')
    if (len(octets) != 6):
        raise MacValueException, 'Incorrect length for MAC address'
    for o in octets:
        num = int(o, 16)
        if (num > 255):
            raise MacValueException, ('Invalid MAC address: %s' % mac_string)
