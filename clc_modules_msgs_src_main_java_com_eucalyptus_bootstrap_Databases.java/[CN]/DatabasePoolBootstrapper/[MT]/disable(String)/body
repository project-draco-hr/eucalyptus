{
  if (Internets.testLocal(hostName)) {
    syncState.set(SyncState.DESYNCING);
    try {
      runDbStateChange(DeactivateHostFunction.INSTANCE.apply(hostName));
      syncState.set(SyncState.NOTSYNCED);
    }
 catch (    Exception ex) {
      LOG.error(ex);
      Logs.exhaust().error(ex,ex);
      syncState.set(SyncState.NOTSYNCED);
    }
  }
 else {
    runDbStateChange(DeactivateHostFunction.INSTANCE.apply(hostName));
  }
}
