def register(self, host, name='vmwarebroker', port=8773, partition=None):
    if (host == None):
        self.euca.handle_error('Missing hostname')
    params = {'Name': 'vmwarebroker', 'Host': host, 'Port': port, }
    if partition:
        params['Partition'] = partition
    try:
        reply = self.euca.connection.get_object('RegisterVMwareBroker', params, BooleanResponse)
        print reply
    except EC2ResponseError as ex:
        self.euca.handle_error(ex)
