def __build_filter_params__(self, params, filters):
    i = 1
    for name in filters:
        aws_name = name
        if (not aws_name.startswith('tag:')):
            aws_name = name.replace('_', '-')
        params[('Filter.%d.Name' % i)] = aws_name
        value = filters[name]
        if (not isinstance(value, list)):
            value = [value]
        j = 1
        for v in value:
            params[('Filter.%d.Value.%d' % (i, j))] = v
            j += 1
        i += 1
