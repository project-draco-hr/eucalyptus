def put_scaling_policy(self, policy):
    params = {'AdjustmentType': policy['adjustment_type'], 'AutoScalingGroupName': policy['as_name'], 'PolicyName': policy['name'], 'ScalingAdjustment': policy['scaling_adjustment'], }
    if (policy['cooldown'] != None):
        params['Cooldown'] = policy['cooldown']
    return self.__make_scale_request__('PutScalingPolicy', params)
