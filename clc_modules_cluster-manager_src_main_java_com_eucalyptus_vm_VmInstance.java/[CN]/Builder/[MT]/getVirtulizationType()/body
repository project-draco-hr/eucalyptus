{
  try {
    final BootableImageInfo emi=this.getBootRecord().getMachine();
    final ImageMetadata.VirtualizationType virtType=emi.getVirtualizationType();
    if (virtType != null)     return virtType.toString();
 else {
      if (emi instanceof BlockStorageImageInfo || ImageMetadata.Platform.windows.equals(emi.getPlatform()))       return ImageMetadata.VirtualizationType.hvm.toString();
 else       return ImageMetadata.VirtualizationType.paravirtualized.toString();
    }
  }
 catch (  final Exception ex) {
    return ImageMetadata.VirtualizationType.paravirtualized.toString();
  }
}
