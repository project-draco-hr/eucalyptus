{
  final EntityTransaction db=Entities.get(VmInstance.class);
  try {
    final VmInstance vm=Entities.merge(v);
    vm.setState(VmState.PENDING,Reason.USER_STARTED);
    db.commit();
    return vm;
  }
 catch (  final RuntimeException ex) {
    Logs.extreme().error(ex,ex);
    db.rollback();
    throw ex;
  }
}
