def get_register_parser(self):
    parser = OptionParser('usage: %prog [options] NAME', version='Eucalyptus %prog VERSION')
    parser.add_option('-H', '--host', dest='host', help='Hostname of the storage.')
    parser.add_option('-p', '--port', dest='port', type='int', default=8773, help='Port for the storage.')
    parser.add_option('-P', '--partition', dest='partition', help='Partition for the cluster.')
    (options, args) = parser.parse_args()
    if (options.host == None):
        self.euca.handle_error('You must provide a hostname (-H or --host)')
    if (len(args) != 1):
        print 'ERROR  Required argument NAME is missing or malformed.'
        parser.print_help()
        sys.exit(1)
    else:
        return (options, args)
