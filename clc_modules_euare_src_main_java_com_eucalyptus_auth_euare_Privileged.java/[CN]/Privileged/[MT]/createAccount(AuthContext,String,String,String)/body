{
  if (!requestUser.isSystemUser() || !Permissions.isAuthorized(VENDOR_IAM,IAM_RESOURCE_ACCOUNT,"",null,IAM_CREATEACCOUNT,requestUser)) {
    throw new AuthException(AuthException.ACCESS_DENIED);
  }
  Account newAccount=Accounts.addAccount(accountName);
  Map<String,String> info=null;
  if (email != null) {
    info=Maps.newHashMap();
    info.put(User.EMAIL,email);
  }
  User admin=newAccount.addUser(User.ACCOUNT_ADMIN,"/",true,info);
  admin.resetToken();
  if (password != null) {
    admin.setPassword(Crypto.generateEncryptedPassword(password));
    admin.setPasswordExpires(System.currentTimeMillis() + AuthenticationLimitProvider.Values.getDefaultPasswordExpiry());
  }
  return newAccount;
}
