{
  LOG.info("Stopping cluster: " + this.clusterInfo.getUri());
  this.rscUpdater.stop();
  this.addrUpdater.stop();
  this.vmUpdater.stop();
  this.nodeLogUpdater.stop();
  this.nodeCertUpdater.stop();
  this.messageQueue.stop();
  this.rscThread.join();
  this.vmThread.join();
  this.addrThread.join();
  this.keyThread.join();
  this.logThread.join();
  this.mqThread.join();
}
