def __init__(self, service_uuid=None, service_name=None, service_partition=None, service_type=None, service_url=None, service_epoch=None, service_state=None, service_detail=None):
    self.service_uuid = service_uuid
    self.service_name = service_name
    self.service_partition = service_partition
    self.service_type = service_type
    self.service_url = service_url
    self.service_epoch = service_epoch
    self.service_state = service_state
    self.service_detail = service_detail
    self.euca = EucaAdmin(path=SERVICE_PATH)
    self.verbose = False
