def service_describe(self, components=None, verbose=False):
    params = {}
    if components:
        self.euca.connection.build_list_params(params, components, 'Name')
    try:
        list = self.euca.connection.get_list('DescribeServices', params, [('euca:item', Service)])
        for i in list:
            if verbose:
                print i
            elif (not verbose):
                print i
    except EC2ResponseError as ex:
        self.euca.handle_error(ex)
