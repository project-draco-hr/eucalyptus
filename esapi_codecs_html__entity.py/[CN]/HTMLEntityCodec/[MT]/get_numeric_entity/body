def get_numeric_entity(self, pbs):
    '\n        Checks input to see if it is a numeric entity and returns it if it is.\n        \n        @param pbs: the PushbackString \n        @return: None if the input is None, or the character of pbs after \n            decoding\n        '
    first = pbs.peek()
    if (first is None):
        return None
    if ((first == 'x') or (first == 'X')):
        pbs.next()
        return self.parse_hex(pbs)
    return self.parse_number(pbs)
