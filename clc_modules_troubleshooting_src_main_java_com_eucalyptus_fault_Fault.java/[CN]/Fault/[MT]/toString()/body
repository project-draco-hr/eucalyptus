{
  StringWriter stringWriter=new StringWriter();
  PrintWriter out=new PrintWriter(stringWriter);
  String[] linesToCenter=new String[]{conditionLine,causeLine,initiatorLine,locationLine,resolutionLine};
  linesToCenter=center(linesToCenter,':');
  conditionLine=linesToCenter[0];
  causeLine=linesToCenter[1];
  initiatorLine=linesToCenter[2];
  locationLine=linesToCenter[3];
  resolutionLine=linesToCenter[4];
  out.println();
  out.println(ASTERISK_LINE);
  out.println(prefixLines(INNER_PREFIX,faultLine,EMPTY_LINE,conditionLine,causeLine,initiatorLine,locationLine,resolutionLine,EMPTY_LINE,resolutionMessageLines));
  out.println(ASTERISK_LINE);
  out.close();
  return stringWriter.toString();
}
