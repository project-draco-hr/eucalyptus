{
  boolean returnValue=false;
  if (jsonArray.length() != 3)   return false;
  try {
    String condition=(String)jsonArray.get(0);
    String key=(String)jsonArray.get(1);
    key=key.replaceAll("\\$","");
    String value=(String)jsonArray.get(2);
    if (condition.contains("eq")) {
      if (value.equals(formFields.get(key)))       returnValue=true;
    }
 else     if (condition.contains("starts-with")) {
      if (!formFields.containsKey(key.toLowerCase()))       return false;
      if (formFields.get(key.toLowerCase()).startsWith(value))       returnValue=true;
    }
  }
 catch (  Exception ex) {
    ex.printStackTrace();
    return false;
  }
  return returnValue;
}
